@page
@model ARM_WEBSITE.Pages.ProgramHead.AddFacultyModel
@{
    ViewData["Title"] = "Add Faculty";
    Layout = "_Layout2";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        html, body {
            height: 100%;
            width: 100%;
            font-family: 'Inter', sans-serif;
            background: #f5f5f5;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        .content {
            flex: 1;
            padding: 25px;
            overflow-y: auto;
        }

        h2 {
            font-size: 24px; 
            font-weight: 700; 
            margin-bottom: 20px; 
        }

        .faculty-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

            .faculty-table th {
                background: #e9ecef;
                padding: 10px;
                text-align: center;
                font-weight: bold;
                white-space: nowrap;
            }

            .faculty-table td {
                padding: 8px;
                border-bottom: 1px solid #ddd;
                text-align: center;
            }

        input, select {
            width: 100%;
            padding: 6px;
            border: 1px solid #ccc;
            border-radius: 5px;
            text-align: center;
        }

        .action-buttons {
            display: flex;
            gap: 4px;
            justify-content: center;
        }

        .btn-add, .btn-delete {
            width: 24px;
            height: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 14px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            padding: 0;
        }

        .btn-add {
            background: #28a745;
            color: white;
        }

        .btn-delete {
            background: #dc3545;
            color: white;
        }

        .form-footer {
            text-align: right;
        }

        .btn-submit {
            background: green;
            color: white;
            padding: 8px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .btn-submit:hover {
                background: #146c43;
            }

        .error {
            border: 2px solid red;
            background: #ffe5e5;
        }
    </style>
</head>
<body>
    <div class="content">
        <h2>Add Faculty</h2>

        <form method="post">
            <table class="faculty-table" id="facultyTable">
                <thead>
                    <tr>
                        <th>Action</th>
                        <th>Professor's Name</th>
                        <th>Shift</th>
                        <th>Course Code</th>
                        <th>Course Name</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <div class="action-buttons">
                                <button type="button" class="btn-add" onclick="addRow()">+</button>
                                <button type="button" class="btn-delete" onclick="deleteRow(this)">🗑</button>
                            </div>
                        </td>
                        <td><input type="text" name="ProfessorName" placeholder="Enter name" required /></td>
                        <td>
                            <select name="Shift" required>
                                <option value="">--Select--</option>
                                <option>Full-time</option>
                                <option>Part-time</option>
                            </select>
                        </td>
                        <td><input type="text" name="CourseCode" placeholder="Enter course code" required /></td>
                        <td><input type="text" name="CourseName" placeholder="Enter course name" required /></td>
                    </tr>
                </tbody>
            </table>

            <div class="form-footer">
                <button type="submit" class="btn-submit">Submit</button>
            </div>
        </form>
    </div>

    <script>
        function addRow() {
            let table = document.getElementById("facultyTable").getElementsByTagName('tbody')[0];
            let lastRow = table.rows[table.rows.length - 1];
            let newRow = lastRow.cloneNode(true);

            let inputs = newRow.querySelectorAll("input, select");
            inputs.forEach(input => {
                if (input.name === "ProfessorName" || input.name === "Shift") {
                    input.closest("td").innerHTML = "";
                } else if (input.tagName === "INPUT") {
                    input.value = "";
                    input.classList.remove("error");
                } else if (input.tagName === "SELECT") {
                    input.selectedIndex = 0;
                }
            });

            table.appendChild(newRow);
        }

        function deleteRow(btn) {
            let row = btn.closest("tr");
            let table = document.getElementById("facultyTable").getElementsByTagName('tbody')[0];
            if (table.rows.length > 1) { row.remove(); }
            else { alert("At least one row is required."); }
        }

        document.querySelector("form").addEventListener("submit", function (e) {
            let courseCodes = [];
            let courseNames = [];
            let duplicates = false;

            document.querySelectorAll("input[name='CourseCode'], input[name='CourseName']").forEach(input => input.classList.remove("error"));

            document.querySelectorAll("input[name='CourseCode']").forEach(input => {
                let val = input.value.trim().toLowerCase();
                if (courseCodes.includes(val)) { duplicates = true; input.classList.add("error"); alert("Duplicate Course Code found: " + input.value); e.preventDefault(); return; }
                courseCodes.push(val);
            });

            document.querySelectorAll("input[name='CourseName']").forEach(input => {
                let val = input.value.trim().toLowerCase();
                if (courseNames.includes(val)) { duplicates = true; input.classList.add("error"); alert("Duplicate Course Name found: " + input.value); e.preventDefault(); return; }
                courseNames.push(val);
            });

            if (duplicates) e.preventDefault();
        });
    </script>
</body>
</html>