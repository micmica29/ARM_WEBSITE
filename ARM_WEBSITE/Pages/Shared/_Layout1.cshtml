<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Academic Resource Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            display: flex;
            min-height: 100vh;
            flex-direction: column;
        }

        .wrapper {
            display: flex;
            flex: 1;
        }

        .sidebar {
            width: 250px; /* Bigger sidebar */
            background-color: #b0c4de;
            padding: 15px;
            border-right: 1px solid #dee2e6;
        }

        .content {
            flex: 1;
            padding: 20px;
        }

        /* Sidebar links */
        .sidebar a {
            display: block;
            font-size: 17px; 
            padding: 12px 14px; 
            color: #000;
            text-decoration: none;
        }

            .sidebar a:hover,
            .sidebar a.active {
                background-color: #e9ecef;
                border-radius: 5px;
            }
    </style>

</head>
<body>
    <!-- Header / Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Academic Resource Management</a>
        </div>
    </nav>

    <div class="wrapper">
        <!-- Sidebar -->
        <div class="sidebar">
            @{
                var currentPage = ViewContext.RouteData.Values["Page"]?.ToString();
            }
            <a asp-page="/Index">🏠 Home</a>
            <a asp-page="/AcademicHead/Curriculum">📘 Curriculum</a>
            <a asp-page="/AcademicHead/AddSection">📅 Class Schedule</a>
            <a asp-page="/AcademicHead/ScheduleOverview">📋 Schedule Overview</a>
            <a asp-page="/AcademicHead/ArchivedCurriculum">🗂 Archive</a>
            <a asp-page="/Logout">🚪 Sign Out</a>
        </div>

        <!-- Main Content -->
        <div class="content">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
